generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  EMPLEADO
  ADMIN
  OPERARIO
}

enum OperarioStatus {
  ACTIVO
  EN_TRABAJO
  DE_BAJA
  NO_DISPONIBLE
}

model User {
  id              Int       @id @default(autoincrement())
  email           String    @unique
  username        String    @unique
  firstName       String
  lastName        String
  password        String
  refreshToken    String?
  role            Role      @default(EMPLEADO)
  isEmailVerified Boolean   @default(false)
  isActive        Boolean   @default(true)
  lastLoginAt     DateTime?
  resetPasswordToken    String?   // Hasheado (nunca texto plano)
  resetPasswordExpires  DateTime? // Cu√°ndo expira el token
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  operario Operario[]
}

model Operario {
  id             Int            @id @default(autoincrement())
  userId         Int
  status         String
  operarioStatus OperarioStatus @default(ACTIVO)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  user User @relation(fields: [userId], references: [id])
}
